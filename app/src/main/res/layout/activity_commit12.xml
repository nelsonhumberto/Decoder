<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.nelsonhumberto.hpdecoder.model2009"
        android:background="#ff000000"
        android:id="@+id/activi2009">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/committitle"
            android:textColor="#fffaffff"
            android:textSize="25sp"
            android:layout_alignParentStart="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="With your NBDMIFIT USB Drive connected to the notebook"
            android:id="@+id/textView4"
            android:textColor="#fffaffff"
            android:textSize="25sp"

            android:layout_toEndOf="@+id/committitle"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/committitle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1) Enter F10 , System Configuration , Boot options , UEFI Boot Mode , Press Enter to Enable UEFI , select Accept , save and then Exit "
            android:id="@+id/textView"
            android:textColor="#fffaffff"
            android:textSize="25sp"
            android:layout_below="@+id/textView4"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2)  Press F9 Boot from EFI File , then select USB key -> Brand11 (or Brand12 o Brand13 or brand14 depending) -> Bootx64.efi -> Press enter to run startup.nsh "
            android:id="@+id/textView2"
            android:textColor="#fffaffff"
            android:textSize="25sp"
            android:layout_below="@+id/textView"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3)  Select 1 or 2 to enable or disable AMT accordingly."
            android:id="@+id/textView3"
            android:textColor="#fffaffff"
            android:textSize="25sp"
            android:layout_below="@+id/textView2"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4) Select 9 to validate and save the information.Notebook will automatically restart a couple of times to finish committing process."
            android:id="@+id/textView5"
            android:textColor="#fffaffff"
            android:textSize="25sp"
            android:layout_below="@+id/textView3"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5)  Enter F10 , System Configuration , Boot options , UEFI Boot Mode , select Disable , select Accept , save and then Exit ."
            android:id="@+id/textView6"
            android:textColor="#fffaffff"
            android:textSize="25sp"
            android:layout_below="@+id/textView5"
            android:layout_alignParentStart="true" />


    </RelativeLayout>

</ScrollView>
