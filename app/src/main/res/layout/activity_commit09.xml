<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.nelsonhumberto.hpdecoder.model2009"
        android:background="#ff000000"
        android:id="@+id/activi2009">

        After the asset information is programmed, NBDMIFIT may prompt for vPro status. If that does not happen please follow the below instructions:

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="After the asset information is programmed, NBDMIFIT may prompt for vPro status. If that does not happen please follow the below instructions: "
            android:id="@+id/textView2"
            android:textColor="#fffaffff"
            android:textSize="25sp"
            android:layout_below="@+id/textView"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1) At the command prompt, type: VP.bat to ENABLE Vpro or NVP.bat to DIABLE (you could also type: cpqamt write on)"
            android:id="@+id/textView3"
            android:textColor="#fffaffff"
            android:textSize="25sp"
            android:layout_below="@+id/textView2"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ignore the errors"
            android:id="@+id/textView5"
            android:textColor="#ffff1321"
            android:textSize="25sp"
            android:layout_below="@+id/textView3"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2) At the command prompt, type: CPQAMT Reboot"
            android:id="@+id/textView6"
            android:textColor="#fffaffff"
            android:textSize="25sp"
            android:layout_below="@+id/textView5"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
            android:textColor="#fffaffff"
            android:textSize="23sp"
            android:layout_below="@+id/textView6"
            android:layout_alignParentStart="true" />


    </RelativeLayout>

</ScrollView>
