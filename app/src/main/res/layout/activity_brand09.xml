<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.nelsonhumberto.hpdecoder.model2009"
    android:background="#ff000000"
    android:id="@+id/activi2009">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1) Boot the system to the USB drive with the latest NBDMIFIT version"
        android:id="@+id/textView4"
        android:textColor="#fffaffff"
        android:textSize="25sp"

        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2) Execute NBDMIFIT.bat and hit P . "
        android:id="@+id/textView"
        android:textColor="#fffaffff"
        android:textSize="25sp"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3) Select Model Number"
        android:id="@+id/textView2"
        android:textColor="#fffaffff"
        android:textSize="25sp"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4)Enter product number (P/N)"
        android:id="@+id/textView3"
        android:textColor="#fffaffff"
        android:textSize="25sp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5) Enter the serial number (S/N)"
        android:id="@+id/textView5"
        android:textColor="#fffaffff"
        android:textSize="25sp"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text='6) Press "Y" if the "asset tag" is the same as the serial number (Donâ€™t select this option unless this is specifically required by the account or customer) '
        android:id="@+id/textView6"
        android:textColor="#fffaffff"
        android:textSize="25sp"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7) Enter the configID (8 hexadecimal characters) and press Enter if it does not exist "
        android:id="@+id/textView8"
        android:textColor="#fffaffff"
        android:textSize="25sp"
        android:layout_below="@+id/textView6"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text='8) Type "Y" to enable "CompuTrace" or any other button if the computer does not support this technology.'
        android:id="@+id/textView9"
        android:textColor="#fffaffff"
        android:textSize="25sp"
        android:layout_below="@+id/textView8"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9) Enter the CT number (14 hex characters).  This is found on the NEW System board. "
        android:id="@+id/textView11"
        android:textColor="#fffaffff"
        android:textSize="25sp"
        android:layout_below="@+id/textView9"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10) Check and confirm data "
        android:id="@+id/textView12"
        android:textColor="#fffaffff"
        android:textSize="25sp"
        android:layout_below="@+id/textView11"
        android:layout_alignParentStart="true" />


</RelativeLayout>

</ScrollView>
